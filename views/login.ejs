<%- include partials/header %>

<div class="container">
    <div class="col-md-6 m-auto">
        <div class="card card-body mt-5 shadow-lg">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Login</h1>
            <% include ./partials/flash %>
            <form action="/users/login" method="POST">
                <div class="form-group shadow-sm">
                    <input
                    type="text"
                    name="username"
                    class="form-control"
                    placeholder="Enter Username"
                    />
                </div>
                <div class="form-group shadow-sm">
                    <input
                    type="password"
                    name="password"
                    class="form-control"
                    placeholder="Enter Password"
                    />
                </div>
                <button type="submit" class="btn btn-dark btn-block shadow">Login</button>
            </form>
            <p class="lead mt-4">
            No Account yet? <a href="/users/register">Register</a>
            </p>
        </div>
    </div>
</div>

<%- include partials/footer %>